@model PagedList.IPagedList<EntityLayer.Concrete.Heading>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Başlık Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string color = "";
    string statusColor = "";
    string status = "";
    string deleteButtonText = "";
    string deleteButtonColor = "";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 2%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 30%">
                                İşlemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Kitap")
                            { color = "badge badge-warning"; }
                            else if (item.Category.CategoryName == "Dizi")
                            { color = "badge badge-primary"; }
                            else if (item.Category.CategoryName == "Yazılım")
                            { color = "badge badge-info"; }
                            else if (item.Category.CategoryName == "Seyahat")
                            { color = "badge badge-dark"; }
                            else
                            { color = "badge badge-secondary"; }
                            <tr>
                                <td>
                                    @item.HeadingId
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd.MM.yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    @{
                                        switch (item.Status)
                                        {
                                            case true:
                                                status = "Aktif";
                                                statusColor = "badge badge-success";
                                                deleteButtonText = "Pasif Yap";
                                                deleteButtonColor = "btn btn-danger btn-sm";
                                                break;

                                            case false:
                                                status = "Pasif";
                                                statusColor = "badge badge-danger";
                                                deleteButtonText = "Aktif Yap";
                                                deleteButtonColor = "btn btn-success btn-sm";
                                                break;
                                        }
                                    }
                                    <span class="@statusColor">@status</span>
                                </td>
                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm"
                                       href="/Content/ContentByHeading/@item.HeadingId">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm"
                                       href="/Heading/UpdateHeading/@item.HeadingId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="@deleteButtonColor"
                                       href="/Heading/DeleteHeading/@item.HeadingId">
                                        <i class="fas fa-trash">
                                        </i>
                                        @deleteButtonText
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/Heading/AddHeading" class="btn btn-primary">Yeni Başlık Ekle</a>
<hr />

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
{
    LiElementClasses = new List<string> { "page-link" }
})